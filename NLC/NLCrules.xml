<rules>
	<enums>	
		<entity name="property">
			<type name="colour">
				<instance name="black" />
				<instance name="blue" />
				<instance name="green" />
				<instance name="cyan" />
				<instance name="red" />
				<instance name="magenta" />
				<instance name="brown" />
				<instance name="lightgrey" />
				<instance name="darkgrey" />
				<instance name="yellow" />
				<instance name="white" />
				<instance name="orange" />
				<instance name="purple" />
			</type>
			<type name="temperature">
				<instance name="hot" />
				<instance name="cold" />
				<instance name="warm" />
			</type>
			<type name="affect">
				<instance name="sad" />
				<instance name="happy" />
			</type>
			<type name="cognition">
				<instance name="excited" />
				<instance name="amused" />
				<instance name="confused" />
				<instance name="bedazzled" />
				<instance name="bored" />
			</type>
			<type name="health">
				<instance name="sick" />
				<instance name="well" />
				<instance name="healthy" />
			</type>
			<type name="valence">
				<instance name="good" />
				<instance name="bad" />
			</type>
			<type name="correctness">
				<instance name="right" />
				<instance name="wrong" />
			</type>
			<type name="moral">
				<instance name="good" />
				<instance name="evil" />
				<instance name="selfish" />
			</type>
			<type name="state">
				<instance name="on" />
				<instance name="off" />
			</type>
		</entity>
		<entity name="condition">
			<!-- see GIArules.xml logicalConditionPreprocessor -->	
		</entity>
	</enums>				
</rules>
